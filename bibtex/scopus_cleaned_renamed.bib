@article{Du2022Structured,
	author  = {Du, Changde and Du, Changying and Huang, Lijie and Wang, Haibao and He, Huiguang},
	title  = {Structured Neural Decoding with Multitask Transfer Learning of Deep Neural Network Representations},
	year  = {2022},
	journal  = {IEEE Transactions on Neural Networks and Learning Systems},
	volume  = {33},
	number  = {2},
	pages  = {600 - 614},
	doi  = {10.1109/TNNLS.2020.3028167},
	url  = {https://www.scopus.com/inward/record.uri?eid=2-s2.0-85113159346&doi=10.1109%2FTNNLS.2020.3028167&partnerID=40&md5=95dc41fbab70b3e161b28317ecba8d32},
	abstract  = {The reconstruction of visual information from human brain activity is a very important research topic in brain decoding. Existing methods ignore the structural information underlying the brain activities and the visual features, which severely limits their performance and interpretability. Here, we propose a hierarchically structured neural decoding framework by using multitask transfer learning of deep neural network (DNN) representations and a matrix-variate Gaussian prior. Our framework consists of two stages, Voxel2Unit and Unit2Pixel. In Voxel2Unit, we decode the functional magnetic resonance imaging (fMRI) data to the intermediate features of a pretrained convolutional neural network (CNN). In Unit2Pixel, we further invert the predicted CNN features back to the visual images. Matrix-variate Gaussian prior allows us to take into account the structures between feature dimensions and between regression tasks, which are useful for improving decoding effectiveness and interpretability. This is in contrast with the existing single-output regression models that usually ignore these structures. We conduct extensive experiments on two real-world fMRI data sets, and the results show that our method can predict CNN features more accurately and reconstruct the perceived natural images and faces with higher quality. © 2022 Elsevier B.V., All rights reserved.},	keywords  = {Brain; Decoding; Deep neural networks; Functional neuroimaging; Image reconstruction; Matrix algebra; Neurophysiology; Regression analysis; Brain activity; Convolutional neural network; Deep neural network; Functional magnetic resonance imaging; Images reconstruction; Multi-output; Multioutput regression; Network representation; Neural decoding; Magnetic resonance imaging; article; controlled study; convolutional neural network; functional magnetic resonance imaging; human; retina image; transfer of learning},
	type  = {Article}}



@article{Weng2022Modeling,
	author  = {Weng, Geyu and Akbarian, Amir and Noudoost, Behrad and Nategh, Neda},
	title  = {Modeling the Relationship between Perisaccadic Neural Responses and Location Information},
	year  = {2022},
	journal  = {Conference Record of the Asilomar Conference on Signals, Systems and Computers},
	volume  = {2022-October},
	pages  = {451 - 454},
