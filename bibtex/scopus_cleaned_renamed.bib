@conference{Tian2025Brainguard,
	author  = {Tian, Zhibo and Quan, Ruijie and Ma, Fan and Zhan, Kun and Yang, Yi},
	title  = {BRAINGUARD: Privacy-Preserving Multisubject Image Reconstructions from Brain Activities},
